
@{
    ViewBag.Title = "Delete";
}

<h2>Datos del Alumno</h2>
<h3>¿Esta seguro que desea eliminar el Alumno?</h3>
<hr />
<div class="container">
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>ID</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.id</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Nombre</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.nombre</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Primer Apellido</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.primerApellido</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Segundo Apellido</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.segundoApellido</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Fecha Nacimiento</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.fechaNacimiento.ToString("dd-MM-yyyy")</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>CURP</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.curp</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Correo</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.correo</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Telefono</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.telefono</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Sueldo Mensual</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.sueldo</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Estado</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.idEstado</p>
        </div>
    </div>
    <div class="d-flex gap-4">
        <div class="text-end col-2">
            <P><b>Estatus</b></P>
        </div>
        <div class="text-start col-2">
            <p>@Model.idEstatus</p>
        </div>
    </div>
</div>
@Html.ActionLink("Regresar a Lista", "Index", "Alumnos", null)
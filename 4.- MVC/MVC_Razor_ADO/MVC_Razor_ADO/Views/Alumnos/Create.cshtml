
@{
    ViewBag.Title = "Create";
}

<h2>Datos del Alumno</h2>
<hr />
@using (Html.BeginForm("Create", "Alumnos", FormMethod.Post))
{
    <div class="container">
        @Html.TextBox("id", null, new { style = "display: none;" })
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Nombre</b></P>
            </div>
            <div class="text-start col-2">
                @Html.TextBox("nombre")
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Primer Apellido</b></P>
            </div>
            <div class="text-start col-2">
                @Html.TextBox("primerApellido")
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Segundo Apellido</b></P>
            </div>
            <div class="text-start col-2">
                @Html.TextBox("segundoApellido")
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Fecha Nacimiento</b></P>
            </div>
            <div class="text-start col-2">
                <input type="date" id="FechaNacimiento" name="FechaNacimiento" class="w-100" />
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>CURP</b></P>
            </div>
            <div class="text-start col-2">
                @Html.TextBox("curp")
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Correo</b></P>
            </div>
            <div class="text-start col-2">
                @Html.TextBox("correo")
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Telefono</b></P>
            </div>
            <div class="text-start col-2">
                @Html.TextBox("telefono")
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Sueldo Mensual</b></P>
            </div>
            <div class="text-start col-2">
                @Html.TextBox("sueldo")
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Estado</b></P>
            </div>
            <div class="text-start col-2">
                @Html.DropDownList("idEstado", new SelectList(ViewBag.estados, "id", "nombre"), new { @class = "w-100" })
            </div>
        </div>
        <div class="d-flex gap-4">
            <div class="text-end col-2">
                <P><b>Estatus</b></P>
            </div>
            <div class="text-start col-2">
                @Html.DropDownList("idEstatus", new SelectList(ViewBag.estatus, "id", "nombre"))
            </div>
        </div>
    </div>
    <input type="submit" name="name" value="Guardar" />
}
@Html.ActionLink("Regresar a Lista", "Index", "Alumnos", null)